<Page x:Class="Practica6.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practica6.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Style="{StaticResource PageBColor}"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Name="In" Content="Вход"  HorizontalAlignment="Center"  Grid.Row="1" Grid.Column="0" Style="{StaticResource btnstyle1}" Click="In_Click" ></Button>
        <Button Name="Reg"  Content="Регистрацмя" HorizontalAlignment="Center"   Grid.Row="1" Grid.Column="1" Style="{StaticResource btnstyle1}" Click="Reg_Click"></Button>
        <Image x:Name="G2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="auto" Margin="20" VerticalAlignment="Top" Width="auto" Source="../Resources/1.png"  />
    </Grid>
</Page>
